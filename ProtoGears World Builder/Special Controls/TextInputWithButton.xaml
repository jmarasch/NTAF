<UserControl x:Class="ProtoGears_World_Builder.Special_Controls.TextInputWithButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProtoGears_World_Builder.Special_Controls"
             mc:Ignorable="d" d:DesignWidth="204.333">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblLabel" Grid.Column="0" Content="Label" VerticalAlignment="Center" Height="26"/>
        <TextBox x:Name="txtText" Grid.Column="1" VerticalAlignment="Center" Margin="10,4" Height="18" />
        <Button x:Name="button" Content="..." Grid.Column="2" Width="25" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</UserControl>
